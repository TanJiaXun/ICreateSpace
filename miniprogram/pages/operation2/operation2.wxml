<!--pages/operation/operation.wxml-->
<view class= "page">

    <view class="weui-cells__title">邀请</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <image src="../../images/wx_login.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">名称</view>
            <view class="weui-cell__ft">{{pro.proName}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <image src="../../images/wx_login.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">分类</view>
            <view class="weui-cell__ft">{{pro.major}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <image src="../../images/wx_login.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">状态</view>
            <view class="weui-cell__ft">{{pro.state}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <image src="../../images/wx_login.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">描述</view>
            <view class="weui-cell__ft">{{pro.description}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
            </view>
            <view class="weui-cell__bd"></view>
            <view class="weui-cell__ft"></view>
        </view>
    </view>
    <view class="page__bd page__bd_spacing">
      <button class="weui-btn" type="primary" bindtap='onAccept'>接受</button>

      <button class="weui-btn" type="warn" bindtap='onReject'>拒绝</button>
    </view>
    
</view>
