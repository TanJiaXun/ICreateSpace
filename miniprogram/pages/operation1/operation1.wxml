<!--pages/operation1/operation1.wxml-->
<view class= "page">

    <view class="weui-cells__title">申请</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <image src="../../images/wx_login.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">学生</view>
            <view class="weui-cell__ft">{{stu.nickName}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <image src="../../images/wx_login.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">专业</view>
            <view class="weui-cell__ft">{{stu.major}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
                <image src="../../images/wx_login.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">申请项目</view>
            <view class="weui-cell__ft">{{proName}}</view>
        </view>
        <view class="weui-cell">
            <view class="weui-cell__hd">
            </view>
            <view class="weui-cell__bd"></view>
            <view class="weui-cell__ft"></view>
        </view>
    </view>
    <view class="page__bd page__bd_spacing">
      <button class="weui-btn" type="primary" bindtap='onAccept'>接受</button>

      <button class="weui-btn" type="warn" bindtap='onReject'>拒绝</button>
    </view>
    
</view>
